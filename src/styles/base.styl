                            line-height: 3;
                            &:before {
                                content: ' ';
                                position: absolute;
                                top: 16px;
                                right: 11px;
                                display: block;
                                width: 0;
                                height: 0;
                                border-color: transparent transparent transparent #fff;
                                border-width: 6px 7px;
                                border-style: solid;
                                z-index: 3;
                            }
