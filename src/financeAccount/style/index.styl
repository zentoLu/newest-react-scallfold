.indentityBox{
    padding: 36px 0;
    background-color: #f9f9f9;
    .crumbs{
        padding-left:2em;
        color:#A4A8AB;
        line-height: 56px;
        font-size: 16px;
        a{
            padding-right:30px;
            &::after{
                content: '>';
                position: absolute;
                margin-left: 11px;
            }
            &:last-child::after{
                content: ''
            }
        }
    }
    .container{
        background-color: #fff;
        border:1px solid #E6E8EE;
    }
}

.fl{
    float: left;
}

.fr{
    float: right;
}


.page-finance-account{
    .steps {
        width: 630px;
        margin: 0 auto;
        margin-top:45px;
        position: relative;
    }
    .steps .step{
        width: 24px;
        height: 24px;
        line-height: 24px;
        background-color: #A4A8AB;
        color: #fff;
        border-radius: 50%;
        text-align: center;
        position: absolute;
        left: 0;
        z-index: 2;
    }
    .steps .step img{
        vertical-align: top;
    }
    .steps .step1{
        left: 16px;
    }
    .steps .step2{
        left: 202px;
    }
    .steps .step3{
        left: 382px;
    }
    .steps .step4{
        left: 564px;
    }
    .steps .step::before,.steps .step::after{
        content:'';
        width: 4px;
        height: 24px;
        background-color: #fff;
        display: block;
        position: absolute;
        left: -4px;
        top: 0;
        z-index: 3;
    }
    .steps .step::after{
        left: 24px;
    }
    .line-box{
        font-size: 0;
        width: 528px;
        position: absolute;
        left: 44px;
        top: 12px;
    }
    .line{
        width: 176px;
        height: 1px;
        background-color:#E6E8EE;
        display: inline-block;
    }
    .line.active{
        background-color: $blue;
    }
    .steps .text{
        padding-top:30px;
        font-size: 16px;
        color: #A4A8AB;
    }
    .steps .active{
        color: #50C1FF;
    }
    .steps .text span{
        display: inline-block;
        width: 180px;
    }
    .steps .text span:nth-last-child(1){
        width: 70px;
    }
    .container >p{
        width: 630px;
        margin: 0 auto;
        padding-top:50px;
        padding-bottom:38px;
        font-size: 18px;
        color: #1D1D1D;
        font-weight: 600;
    }
     .chooseBox{
        width: 630px;
        margin: 0 auto;
    }
     .chooseBox .choose{
        border: 1px solid #E4E4E4;
        width: 290px;
        height: 80px;
        line-height: 80px;
        border-radius: 4px;
        float: left;
        text-align: center;
        cursor: pointer;
        font-size: 16px;
        color: #50C1FF;
    }
     .chooseBox .choose2{
        margin-left:38px;
    }
     .choose.active{
        border: 1px solid #3CBAFF;
        background: url(../img/confirm-indentity-icon2.png) 259px -1px no-repeat;
    }

    .nextStep{
        width: 216px;
        font-size: 16px;
        color: #FFFFFF;
        background-color: #3CBAFF;
        text-align: center;
        line-height: 44px;
        border-radius: 44px;
        margin: 0 auto;
        margin-top:60px;
        margin-bottom:58px;
        cursor: pointer;
    }

    .foot{
        margin-top: 0px;
    }
}
