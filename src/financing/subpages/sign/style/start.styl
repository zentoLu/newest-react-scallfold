@import '../../../../styles/com/vars.styl'
.ant-modal-body{
    height: 140px;
    box-sizing: border-box;
    .pop-body{
        text-align: center;
        p{
            color: #1D1D1D;
            margin-bottom: 24px;
        }
        input{
            border: 1px solid #E6E8EE;
            border-radius: 4px;
            line-height: 50px;
            width: 180px;
            display: inline-block;
            height: 50px;
        }
        .btn-getcode{
            color: $blue;
            border: 1px solid #E6E8EE;
            border-radius: 4px;
            line-height: 50px;
            width: 100px;
            display: inline-block;
            height: 48px;
            vertical-align: top;
            margin-left: 12px;
            &[disabled]{
                cursor: not-allowed;
                color: $gray;
            }
        }
    }
    .ant-form-explain{
        text-align: left;
        text-indent: 2em;
    }
    .has-error .ant-input {
        border-color: #ff4d4f;
        outline: 0;
        -webkit-box-shadow: 0 0 0 2px rgba(245, 34, 45, 0.2);
        box-shadow: 0 0 0 2px rgba(245, 34, 45, 0.2);
    }
}
.ant-modal .ant-modal-footer{
    text-align: center;
    border-top: none;
    padding-top: 0;
    padding-bottom: 24px;
    .ant-btn{
        box-sizing: border-box;
        height: 44px;
        line-height: 44px;
        display: inline-block;
        border-radius: 44px;
        text-align: center;
        width: 140px;
    }
    .btn-cancel{
        color: $blue;
        background: #fff;
        border: 1px solid $blue;
        margin: 0 9px;
    }
    .btn-ok{
        color: #fff;
        background: $blue;
        margin: 0 9px;
    }
}
.page-sign{

    .sign-info{
        margin-top: 48px;
    }
    .sign-info-title{
        font-size: 20px;
        color: #1D1D1D;
        text-align: center;
        line-height: 32px;
        font-weight: bold;
    }
    .sign-info-table{
        margin-top: 20px;
        table{
            width: 350px;
            margin: 0 auto;
            border: 1px solid #E6E8EE;
            border-radius: 6px;
            border-collapse: separate;
            td{
                border-right: 1px solid #E6E8EE;
                border-bottom: 1px solid #E6E8EE;
                line-height: 42px;
                padding-left: 1em;
                font-size: 14px;
                color: #A4A8AB;
                &:last-child{
                    border-right: none;
                }
            }
            tr:last-child td{
                border-bottom: none;
            }
        }
    }
    .protocol{
        font-size: 14px;
        color: #200000;
        margin-top: 34px;
        margin-bottom: 20px;
        line-height: 32px;
        a {
            color: #3CBAFF;
        }
    }
    .btn-box{
        .btn-confirm{
            display: block;
            font-size: 16px;
            color: #FFFFFF;
            text-align: center;
            line-height: 44px;
            background: #50C1FF;
            width: 240px;
            margin: 30px auto 97px;
            border-radius: 44px;
        }
    }
    .footer-border-line{
        width: 1038px;
        margin: 0 auto;
        border-bottom: 1px solid #EBEBEB;
    }
    .sign-steps{
        text-align: center;
        margin: 15px auto;
        font-size: 14px;
        color: #A4A8AB;
        &>div{
            display: inline-block;
            margin: 0 10px;
        }
    }
    .sign-steps .icon-step-arrow{
        margin: 0 4px;
    }
}

