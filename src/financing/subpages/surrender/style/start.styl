@import '../../../../styles/com/vars.styl'
.page-surrender{
    h3{
        text-align: center;
        font-size: 20px;
        color: #1D1D1D;
        line-height: 32px;
        font-weight: normal;
        margin-top: 48px;
        margin-bottom: 24px;
    }
    .surrender-info{
        width: 430px;
        margin: 0 auto;
        color: #1D1D1D;
        .info-item{
            border: $border;
            border-radius: 4px;
            height: 56px;
            margin-bottom: 16px;
        }
        .item-label{
            color: #1D1D1D;
            line-height: 56px;
            display: inline-block;
            width: 120px;
            text-align: center;
            vertical-align: top;
            border-right: $border;
        }
        .item-content{
            display: inline-block;
            width: 300px;
            line-height: 56px;
            span{
                margin-left: 20px;
            }
        }
    }
    .notice{
        color: #768893;
        text-align: center;
        margin-bottom: 12px;
    }
    .icon-info{
        width: 18px;
        height: 18px;
        display: inline-block;
        background: url(../img/info.png) no-repeat center;
        vertical-align: text-bottom;
        margin-right: 6px;
    }
    .btn-box{
        width: 480px;
        margin: 32px auto 60px;
    }
    .btn-confirm{
        width: 220px;
        height: 44px;
        line-height: 44px;
        border: 1px solid $blue;
        color: $blue;
        text-align: center;
        border-radius: 44px;
        cursor: pointer;
    }
    .btn-consider{
        width: 220px;
    }
}
