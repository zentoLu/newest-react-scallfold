@import '../../../../styles/com/vars.styl'
.page-redeem{
    h3{
        text-align: center;
        font-size: 20px;
        color: #1D1D1D;
        line-height: 32px;
        font-weight: normal;
        margin-top: 48px;
        margin-bottom: 24px;
    }
    .redeem-info{
        width: 430px;
        margin: 0 auto;
        color: #1D1D1D;
        .info-item{
            border: $border;
            border-radius: 4px;
            height: 56px;
            margin-bottom: 16px;
        }
        .item-label{
            color: #1D1D1D;
            line-height: 56px;
            display: inline-block;
            width: 120px;
            text-align: center;
            vertical-align: top;
            border-right: $border;
        }
        .item-content{
            display: inline-block;
            width: 300px;
            padding-top: 8px;
            .redeem-input-amt{
                line-height: 44px;
                margin-left: 20px;
                border: none;
                &:focus{
                    border: none;
                    outline: none;
                }
            }
            .btn-redeem-all {
                color: $blue;
                top: 19px;
                right: 20px;
            }
            .icon-info{
                width: 18px;
                height: 18px;
                display: inline-block;
                background: url(../img/info.png) no-repeat center;
                top: 19px;
                right: 20px;
            }
            p{
                line-height: 20px;
                margin-left: 20px;
            }
        }
        .redeem-method{
            line-height: 40px;
            margin-left: 20px;
        }



    }
    .btn-confirm{
        width: 220px;
        margin: 36px auto 60px;
    }
}
